---
interface Props {
    text : string
}
const {text} = Astro.props;
---

<div class=" w-screen flex justify-center items-center mb-20 mt-16 text-gray-500 space-x-1">

    <div id="text" class="text-xl">{text}</div>

</div>


<style>
#text {
    display: flex;
    align-items: center;
}
#text::before,
#text::after {
    border-top: 1px solid;
    content: "";
    flex-grow: 1;
}
#text::before {
  margin-right: 30px;
}

#text::after {
  margin-left: 30px;
}
</style>
